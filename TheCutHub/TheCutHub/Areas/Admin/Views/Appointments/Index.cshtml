@model IEnumerable<TheCutHub.Models.Appointment>
@{
    ViewData["Title"] = "All Appointments";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Client Email</th>
            <th>Barber</th>
            <th>Service</th>
            <th>Date & Time</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.User.Email</td>
                <td>@a.Barber.FullName</td>
                <td>@a.Service.Name</td>
                <td>@a.AppointmentDateTime.ToString("g")</td>
                <td>@a.Notes</td>
            </tr>
        }
    </tbody>
</table>
