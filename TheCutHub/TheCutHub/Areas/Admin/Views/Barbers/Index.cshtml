@model IEnumerable<TheCutHub.Models.Barber>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "All Barbers";
}

<div class="container mt-5">
    <h2 class="section-title text-center mb-4">
        <i class="bi bi-person-bounding-box me-2 text-gold"></i> @ViewData["Title"]
    </h2>

    <div class="table-responsive">
        <table class="table table-dark table-hover table-bordered align-middle">
            <thead>
                <tr class="text-gold text-uppercase">
                    <th>Full Name</th>
                    <th>Bio</th>
                    <th>Profile Image</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.FullName</td>
                        <td>@(string.IsNullOrEmpty(b.Bio) ? "No bio" : b.Bio)</td>
                        <td>
                            @if (!string.IsNullOrEmpty(b.ProfileImageUrl))
                            {
                                <img src="@b.ProfileImageUrl" class="img-fluid rounded" style="max-width: 100px;" />
                            }
                            else
                            {
                                <span class="text-muted">No image</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-area="Barber" asp-controller="Profile" asp-action="Edit" asp-route-id="@b.UserId" class="btn btn-sm btn-outline-primary me-2">
                                <i class="bi bi-pencil-fill me-1"></i> Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
