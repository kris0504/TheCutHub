@model IEnumerable<TheCutHub.Models.Barber>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "All Barbers";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add New Barber</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Full Name</th>
            <th>Bio</th>
            <th>Profile Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.FullName</td>
                <td>@b.Bio</td>
                <td>
                    @if (!string.IsNullOrEmpty(b.ProfileImageUrl))
                    {
                        <img src="@b.ProfileImageUrl" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@b.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@b.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
