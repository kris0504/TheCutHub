@model TheCutHub.Models.Service
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Delete Service";
}

<div class="container mt-5">
	<div class="card border-danger shadow p-4 mx-auto" style="max-width: 600px;">
		<h3 class="text-center text-danger mb-3">
			<i class="bi bi-exclamation-triangle-fill me-2"></i>
			Delete Service?
		</h3>

		<p class="text-center text-muted">
			This action is <strong>irreversible</strong>. The service will be removed from the list.
		</p>

		<hr class="border-danger opacity-50" />

		<div class="mb-3">
			<h4 class="text-gold">@Model.Name</h4>
			<p class="mb-1"><i class="bi bi-currency-dollar me-1"></i> <strong>@Model.Price.ToString("C")</strong></p>
			<p class="mb-1"><i class="bi bi-stopwatch me-1"></i> <strong>@Model.DurationMinutes&nbsp;min</strong></p>
			@if (!string.IsNullOrWhiteSpace(Model.Description))
			{
				<p class="fst-italic">@Model.Description</p>
			}
		</div>
		<form asp-area="Admin"
			  asp-controller="Services"
			  asp-action="Delete"
			  method="post">
			@Html.AntiForgeryToken()
			<input type="hidden" asp-for="Id" />
			<button type="submit" class="btn btn-danger">
				<i class="bi bi-trash-fill me-1"></i> Delete
			</button>
			<a asp-area="Admin"
			   asp-controller="Services"
			   asp-action="Index"
			   class="btn btn-outline-gold">
				<i class="bi bi-x-circle me-1"></i> Cancel
			</a>
		</form>

	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
