@model IEnumerable<TheCutHub.Models.WorkingHour>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Working Hours";
}

<div class="container mt-5">
    <h2 class="section-title text-center mb-4">
        <i class="bi bi-calendar-week-fill me-2 text-gold"></i>
        Working Hours – Barber #@ViewBag.BarberId
    </h2>

    <div class="table-responsive">
        <table class="table table-dark table-bordered table-hover align-middle">
            <thead>
                <tr class="text-gold text-uppercase">
                    <th>Day</th>
                    <th>Start</th>
                    <th>End</th>
                    <th class="text-center">Working</th>
                    <th>Interval (min)</th>
                    <th class="text-center" style="width:120px;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var h in Model)
                {
                    <tr>
                        <td>@h.Day</td>
                        <td>@h.StartTime</td>
                        <td>@h.EndTime</td>
                        <td class="text-center">
                            @if (h.IsWorking)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>@h.SlotIntervalInMinutes</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@h.Id"
                               class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil-square me-1"></i> Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a asp-area="Admin" asp-controller="WorkingHours"
       asp-action="Index"
       class="btn btn-outline-gold mt-3">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to Barbers
    </a>
</div>
