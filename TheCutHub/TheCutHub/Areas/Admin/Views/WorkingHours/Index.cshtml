@model IEnumerable<TheCutHub.Models.Barber>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Select Barber";
}

<div class="container mt-5">
    <h2 class="section-title text-center mb-4">
        <i class="bi bi-clock-history me-2 text-gold"></i>
        Select a Barber to Edit Working Hours
    </h2>

   
    <div class="mb-3 w-50 mx-auto">
        <input id="barber-search"
               class="form-control"
               placeholder="Type to filter by name…" />
    </div>

    <div class="table-responsive">
        <table id="barber-table" class="table table-dark table-bordered table-hover align-middle">
            <thead>
                <tr class="text-gold text-uppercase">
                    <th>Name</th>
                    <th class="text-center" style="width: 180px;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var barber in Model)
                {
                    <tr>
                        <td>@barber.FullName</td>
                        <td class="text-center">
                            <a asp-action="EditByBarber"
                               asp-route-id="@barber.Id"
                               class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil-square me-1"></i> Edit Hours
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script>
        
        document.getElementById('barber-search')
            .addEventListener('input', function (e) {
                const term = e.target.value.toLowerCase();
                document.querySelectorAll('#barber-table tbody tr')
                    .forEach(row => {
                        const name = row.cells[0].innerText.toLowerCase();
                        row.style.display = name.includes(term) ? '' : 'none';
                    });
            });
    </script>
}
