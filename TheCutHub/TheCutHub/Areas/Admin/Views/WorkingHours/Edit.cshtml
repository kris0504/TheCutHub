@model TheCutHub.Models.WorkingHour
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Working Hours";
}

<div class="container mt-5">
    <h2 class="section-title text-center mb-4">
        <i class="bi bi-pencil-square me-2 text-gold"></i> Edit Working Hours
    </h2>

   

    <div class="card shadow p-4 mx-auto" style="max-width: 550px;">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="BarberId" />

            <div class="mb-3">
                <label asp-for="Day" class="form-label text-gold">
                    <i class="bi bi-calendar-day me-1"></i> Day
                </label>
                <input asp-for="Day" class="form-control" readonly />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="StartTime" class="form-label text-gold">
                        <i class="bi bi-play-fill me-1"></i> Start
                    </label>
                    <input asp-for="StartTime" class="form-control timepicker" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="EndTime" class="form-label text-gold">
                        <i class="bi bi-stop-fill me-1"></i> End
                    </label>
                    <input asp-for="EndTime" class="form-control timepicker" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="SlotIntervalInMinutes" class="form-label text-gold">
                    <i class="bi bi-stopwatch me-1"></i> Slot interval
                </label>
                <select asp-for="SlotIntervalInMinutes" class="form-select">
                    <option value="15">15 minutes</option>
                    <option value="20">20 minutes</option>
                    <option value="30">30 minutes</option>
                    <option value="60">60 minutes</option>
                </select>
                <span asp-validation-for="SlotIntervalInMinutes" class="text-danger"></span>
            </div>

            <div class="form-check form-switch mb-4">
                <input asp-for="IsWorking" class="form-check-input" />
                <label asp-for="IsWorking" class="form-check-label text-gold">
                    Working that day
                </label>
            </div>

            <div class="d-flex gap-3 justify-content-end">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check2-circle me-1"></i> Save
                </button>
                <a asp-action="EditByBarber" asp-route-id="@Model.BarberId"
                   class="btn btn-outline-gold">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.dark.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <script>
        flatpickr(".timepicker", {
            enableTime: true,
            noCalendar: true,
            dateFormat: "H:i",
            time_24hr: true
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}
