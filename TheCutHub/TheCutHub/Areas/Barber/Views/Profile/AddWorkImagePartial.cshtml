@model TheCutHub.Models.ViewModels.AddWorkImageViewModel

<form asp-area="Barber"
      asp-controller="Profile"
      asp-action="AddWorkImage"
      method="post"
      enctype="multipart/form-data">
       @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="ImageFile" class="form-label">Image file:</label>
        <input asp-for="ImageFile" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger small"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add image</button>
</form>
