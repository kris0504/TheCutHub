@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow p-4 mt-5">
            <h2 class="text-center mb-4 section-title">
                <i class="bi bi-person-plus-fill me-2 text-gold"></i> Create a New Account
            </h2>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" placeholder="username" />
                    <label asp-for="Input.UserName">
                        <i class="bi bi-person-fill me-1 text-gold"></i> Username
                    </label>
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="name@example.com" />
                    <label asp-for="Input.Email">
                        <i class="bi bi-envelope-fill me-1 text-gold"></i> Email
                    </label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="password" />
                    <label asp-for="Input.Password">
                        <i class="bi bi-lock-fill me-1 text-gold"></i> Password
                    </label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="confirm password" />
                    <label asp-for="Input.ConfirmPassword">
                        <i class="bi bi-shield-lock-fill me-1 text-gold"></i> Confirm Password
                    </label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button id="registerSubmit" type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle-fill me-1"></i> Register
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
