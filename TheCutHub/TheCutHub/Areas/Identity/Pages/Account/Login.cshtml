@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow p-4 mt-5">
            <h2 class="text-center mb-4 section-title">
                <i class="bi bi-person-circle me-2 text-gold"></i> Login to Your Account
            </h2>

            <form id="account" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" placeholder="username" />
                    <label asp-for="Input.UserName" class="form-label">
                        <i class="bi bi-envelope-fill me-1 text-gold"></i> Username
                    </label>
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">
                        <i class="bi bi-lock-fill me-1 text-gold"></i> Password
                    </label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label text-light" asp-for="Input.RememberMe">
                        Remember Me
                    </label>
                </div>

                <div class="d-grid mb-3">
                    <button id="login-submit" type="submit" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Log in
                    </button>
                </div>

                <div class="text-center">
                    <p class="mb-1">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="link-light">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-light">
                            Don’t have an account? Register
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
