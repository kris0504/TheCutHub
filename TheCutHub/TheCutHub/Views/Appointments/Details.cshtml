@model TheCutHub.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

<h1 class="mb-4 text-warning">Appointment Details</h1>

<div class="card border border-light shadow-lg">
    <div class="card-body bg-dark text-white">

        <dl class="row">
            <dt class="col-sm-3">User</dt>
            <dd class="col-sm-9">@Model.User?.UserName</dd>

            <dt class="col-sm-3">Barber</dt>
            <dd class="col-sm-9">@Model.Barber?.FullName</dd>

            <dt class="col-sm-3">Service</dt>
            <dd class="col-sm-9">
                @Model.Service?.Name
                <span class="text-muted">(@Model.Service?.Price.ToString("C2"))</span>
            </dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-3">Time</dt>
            <dd class="col-sm-9">@Model.TimeSlot.ToString(@"hh\:mm")</dd>

            <dt class="col-sm-3">Notes</dt>
            <dd class="col-sm-9">@Model.Notes</dd>
        </dl>

        <div class="mt-4">
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger me-2">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
