@model IEnumerable<TheCutHub.Models.Appointment>

@{
    ViewData["Title"] = "Index";
}

<h1>Appointments</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
@if (!Model.Any())
{
    <div class="alert alert-info">You have no appointments yet.</div>
}
else
{
    <table class="table table-dark table-hover">

        <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Barber</th>
                <th>Service</th>
                <th>Notes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.Date.ToString("dd.MM.yyyy")</td>
                    <td>@appointment.TimeSlot.ToString(@"hh\:mm")</td>
                    <td>@appointment.Barber?.FullName</td>
                    <td>@appointment.Service?.Name</td>
                    <td>@appointment.Notes</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-outline-primary">Details</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
