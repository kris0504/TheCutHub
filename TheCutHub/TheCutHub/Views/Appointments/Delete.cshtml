@model TheCutHub.Models.Appointment

@{
    ViewData["Title"] = "Cancel Appointment";
}

<h1 class="mb-4 text-warning">Cancel Appointment</h1>

<div class="card border border-danger shadow-lg">
    <div class="card-body bg-dark text-white">
        <h5 class="card-title text-danger">Are you sure you want to cancel this appointment?</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">User</dt>
            <dd class="col-sm-9">@Model.User?.UserName</dd>

            <dt class="col-sm-3">Barber</dt>
            <dd class="col-sm-9">@Model.Barber?.FullName</dd>

            <dt class="col-sm-3">Service</dt>
            <dd class="col-sm-9">@Model.Service?.Name</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-3">Time</dt>
            <dd class="col-sm-9">@Model.TimeSlot.ToString(@"hh\:mm")</dd>

            <dt class="col-sm-3">Notes</dt>
            <dd class="col-sm-9">@Model.Notes</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-outline-danger me-2">
                <i class="bi bi-x-circle"></i> Cancel Appointment
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>
