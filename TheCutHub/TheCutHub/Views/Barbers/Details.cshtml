@model TheCutHub.Models.Barber
@{
    ViewData["Title"] = Model.FullName;
}

<div class="row">
    <div class="col-md-4">
        <img src="@(Model.ProfileImageUrl ?? "/images/default-barber.png")"
             class="img-fluid rounded" alt="@Model.FullName" />
    </div>
    <div class="col-md-8">
        <h2>@Model.FullName</h2>
        <p>@Model.Bio</p>
        <h5>Ревюта</h5>
        @if (Model.Reviews?.Any() ?? false)
        {
            foreach (var r in Model.Reviews)
            {
                <div class="border p-2 mb-2">
                    <strong>@r.UserName:</strong> @r.Comment<br />
                    <small class="text-muted">@r.CreatedOn.ToShortDateString()</small>
                </div>
            }
        }
        else
        {
            <p><em>Все още няма ревюта.</em></p>
        }
    </div>
</div>
<a asp-action="Index" class="btn btn-secondary mt-3">Назад към списъка</a>
