@model IEnumerable<TheCutHub.Models.Barber>

@{
	ViewData["Title"] = "Barbers";
}

<h1 class="section-title mb-4">Our Barbers</h1>

<div class="row">
	@foreach (var b in Model)
	{
		<div class="col-md-4 mb-4">
			<div class="card h-100 shadow-sm border-0">
				<img src="@(b.ProfileImageUrl ?? "/images/default-barber.png")"
					 class="card-img-top rounded-top" alt="@b.FullName"
					 style="object-fit: cover; height: 250px;" />

				<div class="card-body d-flex flex-column">
					<h5 class="card-title text-center mb-2">@b.FullName</h5>

					<p class="card-text text-muted" style="flex-grow: 1;">
						@(string.IsNullOrEmpty(b.Bio) ? "No bio available." : b.Bio.Length > 100 ? b.Bio.Substring(0, 100) + "…" : b.Bio)
					</p>

					<a asp-action="Details" asp-route-id="@b.Id"
					   class="btn btn-outline-primary mt-auto w-100">
						View Profile
					</a>
				</div>
			</div>
		</div>
	}
</div>
