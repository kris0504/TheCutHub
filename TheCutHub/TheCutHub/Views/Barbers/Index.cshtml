@model IEnumerable<TheCutHub.Models.Barber>

@{
	ViewData["Title"] = "Index";
}

<h1>Barbers</h1>
<div class="row">
	@foreach (var b in Model)
	{
		<div class="col-md-4 mb-4">
			<div class="card">
				<img src="@(b.ProfileImageUrl ?? "/images/default-barber.png")"
					 class="card-img-top" alt="@b.FullName" />
				<div class="card-body">
					<h5 class="card-title">@b.FullName</h5>
					<p class="card-text">@b.Bio?.Substring(0, Math.Min(100, b.Bio.Length))…</p>
					<a asp-action="Details" asp-route-id="@b.Id"
					   class="btn btn-sm btn-primary">Преглед</a>
				</div>
			</div>
		</div>
	}
</div>