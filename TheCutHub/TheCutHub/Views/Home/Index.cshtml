@{
    ViewData["Title"] = "Welcome";
}

<section class="text-center py-5">
    <div class="container">
        <h1 class="display-4 mb-4">Welcome to <span class="text-warning">TheCutHub</span></h1>
        <p class="lead mb-5">
            Your ultimate destination for modern barber appointments.<br />
            Discover top-rated barbers and book your slot with ease.
        </p>

        <a asp-controller="Appointments" asp-action="Create" class="btn btn-primary btn-lg me-3">
            <i class="bi bi-calendar-check-fill me-1"></i> Book Now
        </a>

        <a asp-controller="Barbers" asp-action="Index" class="btn btn-outline-dark btn-lg">
            <i class="bi bi-person-lines-fill me-1"></i> Explore Barbers
        </a>
    </div>
</section>
<section class="py-5 border-top border-secondary">
    <div class="container">
        <h2 class="section-title text-center">See The Work</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <img src="/images/gallery1.jpg" class="img-fluid rounded shadow-sm" alt="Work 1">
            </div>
            <div class="col-md-4">
                <img src="/images/gallery2.jpg" class="img-fluid rounded shadow-sm" alt="Work 2">
            </div>
            <div class="col-md-4">
                <img src="/images/gallery3.jpg" class="img-fluid rounded shadow-sm" alt="Work 3">
            </div>
        </div>
    </div>
</section>

<section class="py-5 border-top border-secondary">
    <div class="container text-center">
        <h2 class="section-title">Why choose us?</h2>
        <div class="row mt-4">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <i class="bi bi-clock-history display-4 mb-3 text-warning"></i>
                        <h5>Flexible Scheduling</h5>
                        <p>Pick the date and hour that suits you – with real-time availability.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <i class="bi bi-scissors display-4 mb-3 text-warning"></i>
                        <h5>Professional Barbers</h5>
                        <p>Only verified barbers with public reviews and portfolios.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <i class="bi bi-star-fill display-4 mb-3 text-warning"></i>
                        <h5>Trusted Reviews</h5>
                        <p>Real feedback from clients to help you choose the best experience.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="py-5 border-top border-secondary">
    <div class="container">
        <h2 class="section-title text-center">What Our Clients Say</h2>
        <div class="row mt-4">
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <p class="mb-1">
                            <i class="bi bi-quote text-warning fs-3"></i>
                            Best barber experience I've had! Booking was so easy.
                        </p>
                        <footer class="blockquote-footer text-light">Kris T.</footer>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <p class="mb-1">
                            <i class="bi bi-quote text-warning fs-3"></i>
                            Super professional. I loved the vibe and the cut!
                        </p>
                        <footer class="blockquote-footer text-light">Alex D.</footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="py-5 text-center border-top border-secondary">
    <div class="container">
        <h2 class="mb-4">Ready for your next fresh cut?</h2>
        <a asp-controller="Appointments" asp-action="Create" class="btn btn-primary btn-lg">
            <i class="bi bi-calendar-plus-fill me-2"></i>Book Appointment Now
        </a>
    </div>
</section>
