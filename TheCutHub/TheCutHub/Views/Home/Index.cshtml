@{
    ViewData["Title"] = "Home Page";
}


<div class="container text-center mt-5">
    
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <h1 class="display-4 mb-3">Welcome to <span style="color: var(--barber-gold);">TheCutHub</span></h1>
        <p class="lead">Where style meets tradition. Reserve your moment of confidence.</p>
        <a href="/Appointments/Create" class="btn btn-primary mt-3">Book Your Look</a>

    }
    else
    {
        <a class="btn btn-primary btn-lg mt-3" asp-area="Identity" asp-page="/Account/Login">Book Now</a>
    }
</div>
<section class="container py-5">
    <h2 class="section-title">Our Services</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 text-center">
                <i class="bi bi-scissors" style="font-size: 2rem; color: var(--barber-gold);"></i>
                <h5 class="mt-3">Haircut</h5>
                <p>Tailored haircuts to fit your personal style.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 text-center">
                <i class="bi bi-person-fill" style="font-size: 2rem; color: var(--barber-gold);"></i>
                <h5 class="mt-3">Beard Trim</h5>
                <p>Keep your beard clean, sharp, and stylish.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 text-center">
                <i class="bi bi-lightning" style="font-size: 2rem; color: var(--barber-gold);"></i>
                <h5 class="mt-3">Style Consultation</h5>
                <p>Advice and tips to match your personality.</p>
            </div>
        </div>
    </div>
</section>


<div class="container text-center mt-5">
    <h2>Meet Our Team</h2>
    <p>Our professional barbers are here to help you look your best.</p>
    <a href="/Barbers" class="btn btn-outline-dark">View Barbers</a>
</div>

<div class="container mt-5 text-center">
    <h2>Already have an account?</h2>
    <a href="/Identity/Account/Login" class="btn btn-success me-2">Login</a>
    <a href="/Identity/Account/Register" class="btn btn-outline-success">Register</a>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
