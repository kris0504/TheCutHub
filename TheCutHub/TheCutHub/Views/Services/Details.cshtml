@model TheCutHub.Models.Service

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <div class="card border-gold bg-dark text-light">
        <div class="card-body">
            <h2 class="card-title text-gold">@Model.Name</h2>
            <p class="card-text">@Model.Description</p>

            <p class="card-text">
                <strong>Price:</strong> @Model.Price.ToString("F2") лв.<br />
                <strong>Duration:</strong> @Model.DurationMinutes минути
            </p>

            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <a asp-controller="Appointments" asp-action="Create" asp-route-serviceId="@Model.Id" class="btn btn-outline-success mt-3">
                    <i class="bi bi-calendar-plus"></i> Book Appointment
                </a>

            }
            else
            {
                <p class="text-muted mt-3">
                    <em>Login to book this service.</em>
                </p>
            }
        </div>
    </div>

    <a asp-action="Index" class="btn btn-outline-secondary mt-4">
        <i class="bi bi-arrow-left"></i> Back to Services
    </a>
</div>
